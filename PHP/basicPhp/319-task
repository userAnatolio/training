18. Дан многомерный массив (см. его под задачей). С помощью цикла выведите строки в формате 'имя-зарплата'.

<?php

$arr = [
0=>['name'=>'Коля', 'salary'=>300],
1=>['name'=>'Вася', 'salary'=>400],
2=>['name'=>'Петя', 'salary'=>500],
];

$i = 0;
while($i < count($arr)) {
echo $arr[$i]['name'].': '.$arr[$i]['salary'].'<br>';
$i++;
}

?>
