5. Даны N абзацев с числами. По нажатию на кнопку выведите эти числа в инпут через запятую в порядке возрастания.

<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Шаблон</title>
<style>
</style>
</head>

<body>
<p>56</p>
<p>5</p>
<p>3</p>

<button onclick="func()">жмякай</button>

<input id="test" placeholder="жмякай на кнопку" value="">

<script>
function func() {
var arr = [];
var text = document.getElementsByTagName('p');
var test = document.getElementById('test');
for(var i = 0; i < text.length; i++) {
arr[i] = text[i].innerHTML;
arr = arr.sort();
var str = arr.join(',');
test.value = str;
}
}
</script>

</body>
</html>
