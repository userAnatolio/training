4. Даны два селекта. В первом находятся страны, во втором - города. Сделайте так, чтобы когда выбирается определенная страна - в другом селекте появлялись города этой страны. В абзац ниже пишите выбранную страну и город через запятую.
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Шаблон</title>
<style>
td {
border: 1px solid black;
width: 250px;
height: 50px;
text-align: center;
}
.activ {
background: red;
}
</style>

</head>

<body>

<select id="country">
<option>Россия</option>
<option>Беларуссия</option>
<option>Украина</option>
</select>

<select id="city">
</select>
<script>

var city = [
['Москва', 'Питер', 'Волгоград'],
['Минск', 'Полоцк', 'Витебск'],
['Одесса', 'Львов', 'Харьков']
];

var country = document.getElementById('country');
var elem = document.getElementById('city');
country.addEventListener('change', newOption);

function deleteCity() {
for(var i = 0; i < elem.children.length; i++) {
elem.removeChild(elem.children[i]);
console.log(elem[i]);
}
if(elem.length > 0) {
deleteCity();
}
}

function newOption() {
var select = country.selectedIndex;

if(elem.length > 0) {
deleteCity();
}
for(var i = 0; i < city[select].length; i++) {
var option = document.createElement('option');
option.innerHTML = city[select][i];
elem.appendChild(option);
}
}

</script>

</body>
</html>
