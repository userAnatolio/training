1. Дан инпут. В него вводится число. По потери фокуса сделайте так, чтобы в абзаце ниже начал тикать обратный отсчет, начиная с введенного числа. Когда отсчет дойдет до нуля - он должен закончится.

<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Шаблон</title>
<style>
</style>
</head>

<body>

<input id="elem" onblur="start()">

<p id="text">0</p>

<script>

var text = document.getElementById('text');
var elem = document.getElementById('elem');

function start() {
window.timerId = setInterval(func, 1000);
}

function stop() {
clearInterval(window.timerId);
}

function func() {
var num = elem.value;
if(elem.value > 0) {
elem.value -= 1;
text.innerHTML = elem.value;
}
if(Number(text.innerHTML) == 0) {
stop();
}

}

</script>

</body>
</html>
