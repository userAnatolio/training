<input type="button" value="Показать куки" id="button">

<script>

function getCookie(name) {
var matches = document.cookie.match(new RegExp(
"(?:^|; )" + name.replace(/([\.$?*|{}\(\)\[\]\\\/\+^])/g, '\\$1') + "=([^;]*)"
));
return matches ? decodeURIComponent(matches[1]) : undefined;
}

var val = 'city';

$('#button').on('click', function(){
alert(getCookie(val));
});

</script>


