<p id="text"></p>
<button onclick="func()">жмякай</button>

<script>
function func() {
var year = document.getElementById('test');
var p = document.getElementById('text');
var date = new Date();
var newYear = date.getFullYear();
text.innerHTML = newYear - year.value;
}
</script>

